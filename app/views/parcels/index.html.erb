<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
  <h1>Parcels</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Address</th>
          <th>Current year value</th>
          <th>Previous year value</th>
          <th>Total taxes</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @parcels.each do |parcel| %>
          <tr>
            <td><%= parcel.address %></td>
            <td><%= display_us_dollar(parcel.current_year_value) %></td>
            <td><%= display_us_dollar(parcel.previous_year_value) %></td>
            <td><%= display_us_dollar(parcel.total_taxes) %></td>
            <td><%= link_to 'Show', parcel %></td>
            <td><%= link_to 'Edit', edit_parcel_path(parcel) %></td>
            <td><%= link_to 'Destroy', parcel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Parcel', new_parcel_path %>

<div class="row">
  <div class="col-md-12">
    <%= will_paginate @parcels %>
  </div>
</div>
